.ShortenListing
  margin-top 50px
  header
    display flex
    align-items center
  h2
    margin-right 25px
    font-weight normal
  &-clear
    color $primaryColor
    cursor pointer
  table
    margin-top 35px
  a
    color $baseColor
    text-decoration none
  &-error
    background lighten($primaryColor, 40%)
    padding 10px
    color #fff
    border-radius 4px
    margin-bottom 20px
    text-align center
  .ShortenGroup
    cursor pointer
    &:hover
      .ShortenGroup-copyLink
        display block
    &-row
      display flex
      justify-content space-between
    &-shortLink
      display block
      span
        color $primaryColor
    &-fullLink
      color darken($secondaryColor, 20%)
    &-copyLink
      color $primaryColor
      display none
      flex-grow 1
      text-align center